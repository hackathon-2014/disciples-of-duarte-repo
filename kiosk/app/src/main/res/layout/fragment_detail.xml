<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin"
            android:gravity="center"

            android:text="Steve Rogers struggles to embrace his role in the modern world and battles a new threat from old history: the Soviet agent known as the Winter Soldier."
            android:textSize="18sp"
            android:maxLines="3"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black15"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            >

            <TextView
                android:id="@+id/info1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="16dp"
                android:gravity="center_vertical"

                android:text="135 MINUTES"
                android:textColor="@color/grey_700"
                android:textAllCaps="true"
                />

            <TextView
                android:id="@+id/info2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="16dp"
                android:gravity="center_vertical"

                android:text="pg-13"
                android:textColor="@color/grey_700"
                android:textAllCaps="true"
                />

            <TextView
                android:id="@+id/info3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="16dp"
                android:gravity="center_vertical"

                android:text="APRIL 2014"
                android:textColor="@color/grey_700"
                android:textAllCaps="true"
                />

            <TextView
                android:id="@+id/info4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="16dp"
                android:gravity="center_vertical"

                android:text="8.9/10"
                android:textColor="@color/grey_700"
                android:textAllCaps="true"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black15"

            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"

            />

        <TextView
            android:id="@+id/full_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margin"

            android:text="Steve Rogers struggles to embrace his role in the modern world and battles a new threat from old history: the Soviet agent known as the Winter Soldier. Steve Rogers struggles to embrace his role in the modern world and battles a new threat from old history: the Soviet agent known as the Winter Soldier. Steve Rogers struggles to embrace his role in the modern world and battles a new threat from old history: the Soviet agent known as the Winter Soldier. Steve Rogers struggles to embrace his role in the modern world and battles a new threat from old history: the Soviet agent known as the Winter Soldier."
            android:textColor="@color/grey_700"
            android:lineSpacingExtra="2dp"
            />


    </LinearLayout>

</ScrollView>